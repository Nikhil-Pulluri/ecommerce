generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid()) @map("_id")
  email    String    @unique
  name     String?
  password String
  role     String
  products Product[]
  orders   Order[]
}

model Product {
  id            String         @id @default(cuid()) @map("_id")
  name          String
  price         Float
  userId        String?
  user          User?          @relation(fields: [userId], references: [id])
  owner         String
  desc          String         @default("no description given")
  cat           String?        @default("no category alloted")
  orderProducts OrderProduct[]
}

model Order {
  id            String         @id @default(cuid()) @map("_id")
  userId        String
  user          User           @relation(fields: [userId], references: [id])
  orderProducts OrderProduct[]
}

model OrderProduct {
  id        String  @id @default(cuid()) @map("_id")
  orderId   String
  productId String
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}
